{% extends 'base.html.twig' %}

{% block title %}Modifier la Réponse{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Sidebar Styles (identique à votre version) */
        .sidebar {
            width: 250px;
            height: 100vh;
            background-color: #13117D;
            color: white;
            padding-top: 20px;
            position: fixed;
            left: 0;
            top: 0;
            z-index: 1000;
        }
        /* ... (conservez tous vos styles existants) ... */

        /* Styles d'erreur améliorés */
        .error-message {
            color: #dc3545;
            font-size: 0.875em;
            margin-top: 0.25rem;
            display: flex;
            align-items: center;
            gap: 5px;
        }
        
        .error-icon {
            color: #dc3545;
        }
        
        .has-error {
            border-color: #dc3545 !important;
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 12 12' width='12' height='12' fill='none' stroke='%23dc3545'%3e%3ccircle cx='6' cy='6' r='4.5'/%3e%3cpath stroke-linejoin='round' d='M5.8 3.6h.4L6 6.5z'/%3e%3ccircle cx='6' cy='8.2' r='.6' fill='%23dc3545' stroke='none'/%3e%3c/svg%3e");
            background-repeat: no-repeat;
            background-position: right calc(0.375em + 0.1875rem) center;
            background-size: calc(0.75em + 0.375rem) calc(0.75em + 0.375rem);
        }
        
        .reclamation-details {
            background: #f8f9fa;
            padding: 20px;
            border-radius: 8px;
            margin-bottom: 30px;
            border-left: 4px solid #1a237e;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <div class="sidebar">
            <div class="logo">
                <img src="{{ asset('images/logo.png') }}" alt="Logo">
            </div>
            
            <ul class="nav">
                <li>
                    <a href="{{ path('admin_reclamations') }}">
                        <i class="fas fa-exclamation-circle"></i> Réclamations
                    </a>
                </li>
                <li>
                    <a href="{{ path('admin_reponses_list', {'id': reponse.reclamation.id}) }}">
                        <i class="fas fa-comments"></i> Réponses
                    </a>
                </li>
            </ul>

            <a href="#" class="logout-btn">
                <i class="fas fa-sign-out-alt"></i> Déconnexion
            </a>
        </div>

        <!-- Main content -->
        <div class="dashboard-content">
            <h1>Modifier la réponse à la réclamation #{{ reclamation.id }}</h1>
            
            {# Messages flash #}
            {% for message in app.flashes('success') %}
                <div class="alert alert-success mb-4">
                    {{ message }}
                </div>
            {% endfor %}
            {% for message in app.flashes('error') %}
                <div class="alert alert-danger mb-4">
                    {{ message }}
                </div>
            {% endfor %}

            {# Détails de la réclamation #}
            <div class="reclamation-details">
                <h2>Réclamation originale</h2>
                <p><strong>Titre :</strong> {{ reclamation.titre }}</p>
                <p><strong>Description :</strong><br>{{ reclamation.description }}</p>
                <p><strong>Date :</strong> {{ reclamation.dateR|date('d/m/Y H:i') }}</p>
                <p><strong>Statut :</strong> {{ reclamation.status }}</p>
            </div>

            {# Formulaire de réponse #}
            <div class="response-form">
                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                    <div class="form-group">
                        {{ form_label(form.DescriptionRep) }}
                        
                        {% set is_invalid = form.DescriptionRep.vars.errors|length > 0 %}
                        
                        {{ form_widget(form.DescriptionRep, {
                            'attr': {
                                'class': 'form-control' ~ (is_invalid ? ' has-error' : ''),
                                'rows': 10,
                                'formnovalidate': 'formnovalidate'
                            }
                        }) }}
                        
                        {% if is_invalid %}
                            <div class="error-message">
                                <i class="fas fa-exclamation-circle error-icon"></i>
                                {% for error in form.DescriptionRep.vars.errors %}
                                    {{ error.message }}
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                    
                    <div class="form-group mt-4">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Enregistrer les modifications
                        </button>
                        <a href="{{ path('admin_reponses_list', {'id': reponse.reclamation.id}) }}" 
                           class="btn btn-secondary">
                           <i class="fas fa-arrow-left"></i> Retour
                        </a>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}