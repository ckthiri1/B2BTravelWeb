<script>
document.addEventListener('DOMContentLoaded', function() {
    const logoContainer = document.getElementById('logoContainer');
    const highlight = document.getElementById('logoHighlight');
    
    if (logoContainer && highlight) {
        // Make highlight visible when hovering over logo
        logoContainer.addEventListener('mouseenter', function() {
            highlight.style.opacity = '1';
        });
        
        logoContainer.addEventListener('mouseleave', function() {
            highlight.style.opacity = '0';
        });
        
        // Move highlight with cursor
        logoContainer.addEventListener('mousemove', function(e) {
            const rect = logoContainer.getBoundingClientRect();
            const x = e.clientX - rect.left;
            const y = e.clientY - rect.top;
            
            highlight.style.left = x + 'px';
            highlight.style.top = y + 'px';
        });
    }
});
</script>
