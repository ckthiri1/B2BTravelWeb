<!DOCTYPE html>
<html  lang="{{ app.request.locale }}">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="csrf-token" content="{{ csrf_token('generate_description') }}">
        <title>{% block title %}B2B TRAVEL{% endblock %}</title>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
            <link rel="stylesheet" href="{{ asset('css/language-selector.css') }}">

        
        {% block stylesheets %}
            <style>

                /* Page Transition Styles */
                .page-transition-overlay {
                    position: fixed;
                    top: 0;
                    left: 0;
                    width: 100%;
                    height: 100%;
                    background-color:#03045f;
                    z-index: 9999;
                    display: flex;
                    justify-content: center;
                    align-items: center;
                    flex-direction: column;
                    opacity: 0;
                    pointer-events: none;
                    transition: opacity 0.5s ease;
                }
                
                .page-transition-overlay.active {
                    opacity: 1;
                }
                
                .transition-logo {
                    position: absolute;
                    top: 30px;
                    right: 30px;
                    width: 120px;
                    height: auto;
                    filter: brightness(0) invert(1);
                }
                
                .loading-text {
                    color: white;
                    font-size: 1.5rem;
                    margin: 30px 0;
                    font-weight: 300;
                    letter-spacing: 1px;
                }
                
                .signature {
                    width: 200px;
                    height: auto;
                    margin-top:-10%;
                    filter: brightness(0) invert(1);
                }
                
                .dot-progress {
                    display: flex;
                    gap: 20px;
                    margin-top: 30px;
                    width: 80%;
                    max-width: 600px;
                    position: relative;
                    height: 20px;
                    justify-content: center;
                }
                
                .dot {
                    width: 20px;
                    height: 20px;
                    border-radius: 50%;
                    background: rgba(255, 255, 255, 0.3);
                    position: relative;
                }
                
                .dot.active {
                    background: white;
                    animation: pulse 0.5s ease-out;
                }
                
                @keyframes pulse {
                    0% { transform: scale(0.8); }
                    50% { transform: scale(1.2); }
                    100% { transform: scale(1); }
                }
                
                .dot-plane {
                    position: absolute;
                    width: 260px;
                    height: 260px;
                    top: -30px;
                    left: 50%;
                    transform: translateX(-50%);
                    opacity: 0;
                    transition: opacity 0.3s ease;
                }
                
                .dot-plane.active {
                    opacity: 1;
                }
            </style>
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        <!-- Page Transition Overlay -->
        <div class="page-transition-overlay">
            <!-- Logo in top right -->
                        <img src="{{ asset('images/Logo.png') }}" alt="TRANEL B2B Travel Signature" class="signature">

            <img src="{{ asset('images/signature.png') }}" alt="B2B Travel Logo" class="transition-logo">
            
            
            <!-- White Signature -->
            
            <div class="dot-progress">
                <div class="dot"></div>
                <div class="dot"></div>
                <div class="dot"></div>
                <div class="dot"></div>
                <div class="dot"></div>
                <div class="dot"></div>
                <div class="dot"></div>
                <div class="dot"></div>
                <div class="dot"></div>
                <div class="dot"></div>
                <div class="dot"></div>
                <div class="dot"></div>
             
                
                <!-- Airplane that moves between dots -->
                <img src="{{ asset('images/airplanee.png') }}" alt="Airplane" class="dot-plane">
            </div>
        </div>

        {% block body %}{% endblock %}
        
        <!-- Transition JavaScript -->
        <script>
        document.addEventListener('DOMContentLoaded', function() {
            const overlay = document.querySelector('.page-transition-overlay');
            const dots = document.querySelectorAll('.dot');
            const dotPlane = document.querySelector('.dot-plane');
            const dotProgress = document.querySelector('.dot-progress');
            
            // Function to handle navigation
            function handleNavigation(e) {
                // Skip if special keys are pressed or it's an external link
                if (e.ctrlKey || e.shiftKey || e.metaKey || e.button !== 0) return;
                
                const href = this.getAttribute('href');
                if (!href || href.startsWith('#') || href.startsWith('javascript:')) return;
                
                // Check if it's a same-origin link
                try {
                    const url = new URL(href, window.location.origin);
                    if (url.origin !== window.location.origin) return;
                } catch(e) {
                    return;
                }
                
                e.preventDefault();
                
                // Reset animations
                overlay.classList.remove('active');
                void overlay.offsetWidth; // Trigger reflow
                
                // Reset dots and plane
                dots.forEach(dot => {
                    dot.classList.remove('active');
                });
                dotPlane.classList.remove('active');
                
                // Show overlay immediately
                overlay.classList.add('active');
                
                // Animate dots and dot-plane sequentially
                dots.forEach((dot, index) => {
                    setTimeout(() => {
                        dot.classList.add('active');
                        
                        // Position the dot-plane above the current dot
                        const dotRect = dot.getBoundingClientRect();
                        const progressRect = dotProgress.getBoundingClientRect();
                        const position = (dotRect.left + dotRect.width/2) - progressRect.left;
                        
                        dotPlane.style.left = `${position}px`;
                        dotPlane.classList.add('active');
                        
                        // Hide the plane before moving to next dot
                        if (index < dots.length - 1) {
                            setTimeout(() => {
                                dotPlane.classList.remove('active');
                            }, 400);
                        }
                        
                    }, index * 500);
                });
                
                // Wait 3 seconds before navigating
                setTimeout(() => {
                    window.location.href = href;
                }, 2000);
            }
            
            // Attach to all navigation links with transition-link class
            document.querySelectorAll('a.transition-link').forEach(link => {
                link.addEventListener('click', handleNavigation);
            });
            
            // Reset animation when page is shown (back button)
            window.addEventListener('pageshow', function(event) {
                overlay.classList.remove('active');
                dots.forEach(dot => {
                    dot.classList.remove('active');
                });
                dotPlane.classList.remove('active');
            });
        });
        </script>
         <script src="{{ asset('js/translation.js') }}"></script>
    </body>
</html>