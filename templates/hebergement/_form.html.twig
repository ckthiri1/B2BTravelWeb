{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
<div class="form-card">
    <div class="form-header bg-gradient-primary mb-4">
        <h2 class="text-white mb-0"><i class="bi bi-house-gear me-2"></i>Informations de l'hébergement</h2>
    </div>

    <div class="form-body">
        {% for field in ['nom', 'adresse', 'type', 'description', 'prix'] %}
            <div class="mb-4">
                {{ form_label(form[field], null, {'label_attr': {'class': 'form-label'}}) }}
                <div class="input-group">
                    {% if field == 'type' %}
                        <span class="input-group-text"><i class="bi bi-tag"></i></span>
                        {{ form_widget(form[field], {
                            'attr': {
                                'class': 'form-select' ~ (form[field].vars.valid ? '' : ' is-invalid')
                            }
                        }) }}
                    {% else %}
                        <span class="input-group-text">
                            <i class="bi bi-{{ {
                                'nom': 'building',
                                'adresse': 'geo-alt',
                                'description': 'card-text',
                                'prix': 'currency-euro'
                            }[field] }}"></i>
                        </span>
                        {{ form_widget(form[field], {
                            'attr': {
                                'class': 'form-control' ~ (field == 'nom' ? ' form-control-lg' : '') ~ (form[field].vars.valid ? '' : ' is-invalid'),
                                'placeholder': {
                                    'nom': 'Hôtel Bellevue...',
                                    'adresse': '12 Rue de la Paix, Paris...',
                                    'description': 'Décrivez votre hébergement...',
                                    'prix': '99'
                                }[field],
                                'min': field == 'prix' ? 0 : null,
                                'max': field == 'prix' ? 9999 : null,
                                'step': field == 'prix' ? 1 : null,
                                'rows': field == 'description' ? 4 : null
                            }
                        }) }}
                    {% endif %}
                </div>
                <div class="invalid-feedback d-block">
                    {% for error in form[field].vars.errors %}
                        <div class="text-danger small mt-1">
                            <i class="bi bi-exclamation-circle me-1"></i>{{ error.message }}
                        </div>
                    {% endfor %}
                </div>
                {% if field == 'description' %}
                    <small class="form-text text-muted">Maximum 255 caractères</small>
                {% endif %}
            </div>
        {% endfor %}
    </div>

    <div class="form-footer text-end pt-4 border-top">
        <button type="submit" class="btn btn-primary btn-lg px-5">
            <i class="bi bi-check2-circle me-2"></i>{{ button_label|default('Enregistrer') }}
        </button>
    </div>
</div>

<style>
    .form-card {
        background: #fff;
        border-radius: 1rem;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
        overflow: hidden;
    }

    .form-header {
        padding: 1.5rem 2rem;
        background: linear-gradient(135deg, #3b82f6 0%, #6366f1 100%);
    }

    .input-group-text {
        background-color: #f8f9fa;
        border-color: #e9ecef;
        min-width: 45px;
        justify-content: center;
    }

    .form-control:focus,
    .form-select:focus {
        box-shadow: 0 0 0 0.25rem rgba(59, 130, 246, 0.25);
        border-color: #3b82f6;
    }

    .invalid-feedback {
        display: block;
        font-size: 0.875em;
        color: #dc3545;
    }

    .text-danger small {
        display: flex;
        align-items: center;
        gap: 0.3rem;
    }

    .bi-exclamation-circle {
        font-size: 0.9em;
    }

    @media (max-width: 768px) {
        .form-header {
            padding: 1rem;
        }
        
        .form-body {
            padding: 1.5rem;
        }
        
        .btn-lg {
            width: 100%;
        }
        
        .form-control-lg {
            font-size: 1rem;
        }
    }
</style>
{{ form_end(form) }}