<script>
document.addEventListener('DOMContentLoaded', function() {
    // Auto-submit des filtres
    document.querySelectorAll('.auto-submit').forEach(element => {
        element.addEventListener('change', function() {
            document.getElementById('searchForm').submit();
        });
    });

    // Gestion du délai pour la recherche texte
    let searchTimeout;
    document.querySelector('input[name="searchTerm"]').addEventListener('input', function(e) {
        clearTimeout(searchTimeout);
        searchTimeout = setTimeout(() => {
            document.getElementById('searchForm').submit();
        }, 500);
    });
});
document.addEventListener('DOMContentLoaded', function() {
    // Graphique circulaire amélioré
    const typeChart = new Chart(document.getElementById('typeChart'), {
        type: 'doughnut',
        data: {
            labels: {{ stats.count_by_type|map(t => t.type)|json_encode|raw }},
            datasets: [{
                data: {{ stats.count_by_type|map(t => t.count)|json_encode|raw }},
                backgroundColor: [
                    '#3b82f6', '#10b981', '#06b6d4', '#f59e0b', '#ef4444'
                ],
                borderWidth: 0,
                hoverOffset: 10
            }]
        },
        options: {
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    position: 'right',
                    labels: {
                        boxWidth: 20,
                        padding: 15,
                        font: { size: 14 }
                    }
                },
                tooltip: {
                    bodyFont: { size: 14 },
                    titleFont: { size: 16 }
                }
            }
        }
    });

    // Graphique à barres amélioré
    const priceChart = new Chart(document.getElementById('priceChart'), {
        type: 'bar',
        data: {
            labels: {{ stats.avg_price_by_type|map(t => t.type)|json_encode|raw }},
            datasets: [{
                label: 'Prix Moyen (€)',
                data: {{ stats.avg_price_by_type|map(t => t.average_price)|json_encode|raw }},
                backgroundColor: '#3b82f6',
                borderRadius: 8,
                borderSkipped: false
            }]
        },
        options: {
            maintainAspectRatio: false,
            responsive: true,
            scales: {
                y: {
                    beginAtZero: true,
                    grid: { display: false },
                    ticks: {
                        callback: value => value + ' €',
                        font: { size: 14 }
                    }
                },
                x: {
                    grid: { display: false },
                    ticks: {
                        font: { size: 14 }
                    }
                }
            },
            plugins: {
                legend: { display: false },
                tooltip: {
                    bodyFont: { size: 14 },
                    titleFont: { size: 16 }
                }
            }
        }
    });
});
</script>
