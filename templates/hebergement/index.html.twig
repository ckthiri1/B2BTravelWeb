{% extends 'base.html.twig' %}

{% block title %}Liste des hébergements{% endblock %}

{% block body %}
 
<header>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script> {# Ajout crucial #}
</header>
<nav class="navbar navbar-expand-lg navbar-custom">
    <div class="container-fluid">
<form class="d-flex align-items-center gap-2" method="GET" id="searchForm">
    <div class="row g-2 w-100 flex-nowrap">
                <!-- Filtre Type -->
                        <div class="col-6 col-md-3">

            <select class="form-select form-select-sm auto-submit" name="type">
    <option value="">Tous les types</option>
    <option value="hotel" {{ currentFilters.type == 'hotel' ? 'selected' }}>Hôtel</option>
    <option value="event" {{ currentFilters.type == 'event' ? 'selected' }}>Hostel</option>
    <option value="travel" {{ currentFilters.type == 'travel' ? 'selected' }}>Maison</option>
</select>
</div>
                <!-- Tri par Prix -->
        <div class="col-6 col-md-3">
            <select class="form-select form-select-sm auto-submit" name="sortPrice" id="sortPrice">
    <option value="">Trier par prix</option>
    <option value="asc" {{ currentFilters.sortPrice == 'asc' ? 'selected' }}>Prix croissant</option>
    <option value="desc" {{ currentFilters.sortPrice == 'desc' ? 'selected' }}>Prix décroissant</option>
</select>
        </div>
                <!-- Filtre Adresse -->
                 <div class="col-6 col-md-3">
            <input type="text" 
                   class="form-control form-control-sm auto-submit" 
                   name="address" 
                   placeholder="Adresse" 
                   value="{{ currentFilters.address }}">
        </div>

                <!-- Recherche par Nom -->
                 <div class="col-6 col-md-3">
            <div class="input-group input-group-sm">
                <input type="text" 
                       class="form-control auto-submit" 
                       name="searchTerm" 
                       placeholder="Rechercher par nom..."
                       value="{{ currentFilters.searchTerm }}">
                <button class="btn btn-primary" type="submit">
                    <i class="bi bi-search"></i>
                </button>
            </div>
        </div>
            </div>
        </form>
    </div>
</nav>
<div class="container my-5">
    <h1 class="mb-4 text-center display-5 fw-bold text-dark mb-5">Nos Hébergements Exceptionnels</h1>
    
<div class="row mb-5">
<div class="d-flex justify-content-between align-items-center mb-5">
      
        <a href="{{ path('app_hebergement_new') }}" class="btn btn-primary btn-lg rounded-pill shadow-sm">
            <i class="bi bi-plus-circle me-2"></i>Ajouter un hébergement
        </a>
         <a href="{{ path('app_hebergement_export_pdf') }}" 
           class="btn btn-danger btn-lg rounded-pill shadow-sm">
            <i class="bi bi-file-earmark-pdf me-2"></i>Exporter PDF
        </a>
    </div>
    
        <!-- Cartes Statistiques -->
     <div class="col-lg-4">
            <div class="row g-4">
                <div class="col-12">
                    <div class="card shadow-sm border-0 h-100">
                        <div class="card-body p-4">
                            <div class="d-flex align-items-center gap-3">
                                <div class="icon-stat bg-primary-soft rounded-circle p-3">
                                    <i class="bi bi-house-door fs-3 text-primary"></i>
                                </div>
                                <div>
                                    <h6 class="mb-2 text-muted">Total Hébergements</h6>
                                    <h2 class="mb-0 text-primary">{{ hebergements|length }}</h2>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 col-lg-12">
                    <div class="card shadow-sm border-0 h-100">
                        <div class="card-body p-4">
                            <div class="d-flex align-items-center gap-3">
                                <div class="icon-stat bg-success-soft rounded-circle p-3">
                                    <i class="bi bi-currency-euro fs-3 text-success"></i>
                                </div>
                                <div>
                                    <h6 class="mb-2 text-muted">Prix Moyen</h6>
                                    <h2 class="mb-0 text-success">
                                        {{ stats.price_stats.avg_price|round }} €
                                    </h2>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 col-lg-12">
                    <div class="card shadow-sm border-0 h-100">
                        <div class="card-body p-4">
                            <div class="d-flex align-items-center gap-3">
                                <div class="icon-stat bg-info-soft rounded-circle p-3">
                                    <i class="bi bi-bar-chart fs-3 text-info"></i>
                                </div>
                                <div>
                                    <h6 class="mb-2 text-muted">Étendue des Prix</h6>
                                    <h4 class="mb-0 text-dark">
                                        {{ stats.price_stats.min_price }} € - {{ stats.price_stats.max_price }} €
                                    </h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Graphiques -->
        <div class="col-lg-8">
            <div class="row g-4">
                <div class="col-12">
                    <div class="card shadow-sm border-0">
                        <div class="card-body p-4">
                            <h5 class="card-title mb-4">Répartition par Type</h5>
                            <div class="chart-container">
                                <canvas id="typeChart"></canvas>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-12">
                    <div class="card shadow-sm border-0">
                        <div class="card-body p-4">
                            <h5 class="card-title mb-4">Prix Moyen par Type</h5>
                            <div class="chart-container">
                                <canvas id="priceChart"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% if hebergements is empty %}
        <div class="alert alert-info text-center rounded-pill">Aucun hébergement disponible actuellement</div>
    {% else %}
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            {% for hebergement in hebergements %}
                <div class="col">
                    <div class="card h-100 border-0 shadow-lg-hover">
                        <div class="card-header bg-gradient-primary text-white rounded-top-3 py-4">
                            <h5 class="card-title mb-0 text-center">{{ hebergement.nom }}</h5>
                        </div>
                        
                        <div class="card-body position-relative">
                            <div class="position-absolute top-0 start-50 translate-middle mt-n3">
                                <span class="badge bg-white text-dark border border-2 border-primary shadow-sm px-3 py-2">
                                    {{ hebergement.type }}
                                </span>
                            </div>

                            <div class="mb-4 pt-4">
                                <p class="card-text text-dark mb-3">
                                    <i class="bi bi-geo-alt-fill text-primary me-2"></i>
                                    {{ hebergement.adresse }}
                                </p>

                                <p class="card-text text-secondary mb-4 line-clamp-3">
                                    {{ hebergement.description }}
                                </p>

                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="h3 text-success mb-0">
                                        {{ hebergement.prix }}<small class="fs-6 text-muted">€/nuit</small>
                                    </div>
                                    <a href="{{ path('app_hebergement_show', {'id': hebergement.id}) }}" 
                                       class="btn btn-link text-decoration-none text-primary p-0">
                                        Voir détails <i class="bi bi-arrow-right-short"></i>
                                    </a>
                                </div>
                            </div>
                        </div>

                        <div class="card-footer bg-transparent border-top-0 text-end py-3">
                            <a href="{{ path('app_hebergement_edit', {'id': hebergement.id}) }}" 
                               class="btn btn-sm btn-outline-secondary rounded-pill px-3">
                                <i class="bi bi-pencil-square me-2"></i>Modifier
                            </a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>

