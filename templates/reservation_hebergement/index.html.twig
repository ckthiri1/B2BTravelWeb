{% extends 'base.html.twig' %}
{% block title %}Réservations d'hébergement{% endblock %}
{% block body %}
<header>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
</header>

        
            <nav class="navbar navbar-expand-lg navbar-custom">
                <div class="container-fluid">
                    <button class="sidebar-toggle btn btn-primary d-lg-none">
                        <i class="bi bi-list"></i>
                    </button>
                    <!-- Barre de recherche et filtres -->
                    <form class="d-flex align-items-center gap-2" method="GET" id="searchForm">
    <div class="row g-2 w-100">
        <!-- Filtre Statut -->
        <div class="col-6 col-md-3">
            <select class="form-select form-select-sm auto-submit" name="status" id="filterStatus">
                <option value="">Tous les statuts</option>
                <option value="EnAttente" {{ app.request.query.get('status') == 'EnAttente' ? 'selected' }}>En attente</option>
                <option value="Resolue" {{ app.request.query.get('status') == 'Resolue' ? 'selected' }}>Résolue</option>
            </select>
        </div>
        
        <!-- Tri par Prix -->
        <div class="col-6 col-md-3">
            <select class="form-select form-select-sm auto-submit" name="sortPrice" id="sortPrice">
                <option value="">Trier par prix</option>
                <option value="asc" {{ app.request.query.get('sortPrice') == 'asc' ? 'selected' }}>Prix croissant</option>
                <option value="desc" {{ app.request.query.get('sortPrice') == 'desc' ? 'selected' }}>Prix décroissant</option>
            </select>
        </div>
        <!-- Tri par Date -->
        <div class="col-6 col-md-3">
            <select class="form-select form-select-sm auto-submit" name="sortDate" id="sortDate">
                <option value="">Trier par date</option>
                <option value="asc" {{ app.request.query.get('sortDate') == 'asc' ? 'selected' }}>Plus ancien</option>
                <option value="desc" {{ app.request.query.get('sortDate') == 'desc' ? 'selected' }}>Plus récent</option>
            </select>
        </div>

        <!-- Barre de recherche -->
        <div class="col-6 col-md-2">
    <div class="input-group input-group-sm">
        <input type="text" 
               class="form-control auto-submit" 
               name="search"
               placeholder="Rechercher..."
               value="{{ app.request.query.get('search') }}"
               style="border-radius: 20px 0 0 20px;">
        <div class="input-group-append">
            <button class="btn btn-primary" 
                    type="submit"
                    style="
                        border-radius: 0 20px 20px 0;
                        background: var(--primary-blue);
                        border-color: var(--primary-blue);
                        
                    ">
                <i class="bi bi-search"></i>
            </button>
        </div>
    </div>
</div>
    </div>
</form>
                    </div>
                </div>
            </nav>
        </div>
<div class="container my-5">
    <h1 class="mb-4 text-center display-5 fw-bold text-dark mb-5">Gestion des Réservations</h1>
 <div class="row mb-5 g-4 animate-stats">
        <!-- Total Réservations -->
        <div class="col-12 col-md-6 col-xl-3">
            <div class="card stat-card h-100 border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="icon-circle bg-primary text-white me-3">
                            <i class="bi bi-calendar-check fs-4"></i>
                        </div>
                        <div>
                            <h6 class="text-uppercase text-muted mb-0">Total Réservations</h6>
                            <h2 class="mb-0 count-up">{{ reservation_hebergements|length }}</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Réservations En Attente -->
        <div class="col-12 col-md-6 col-xl-3">
            <div class="card stat-card h-100 border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="icon-circle bg-warning text-white me-3">
                            <i class="bi bi-clock-history fs-4"></i>
                        </div>
                        <div>
                            <h6 class="text-uppercase text-muted mb-0">En Attente</h6>
                            <h2 class="mb-0 count-up">
                                {{ reservation_hebergements|filter(r => r.status == 'EnAttente')|length }}
                            </h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Réservations Résolues -->
        <div class="col-12 col-md-6 col-xl-3">
            <div class="card stat-card h-100 border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="icon-circle bg-success text-white me-3">
                            <i class="bi bi-check-circle fs-4"></i>
                        </div>
                        <div>
                            <h6 class="text-uppercase text-muted mb-0">Résolues</h6>
                            <h2 class="mb-0 count-up">
                                {{ reservation_hebergements|filter(r => r.status == 'Resolue')|length }}
                            </h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Revenu Total -->
        <div class="col-12 col-md-6 col-xl-3">
            <div class="card stat-card h-100 border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="icon-circle bg-info text-white me-3">
                            <i class="bi bi-cash fs-4"></i>
                        </div>
                        <div>
                            <h6 class="text-uppercase text-muted mb-0">Revenu Total</h6>
                            <h2 class="mb-0">
                                <span class="count-up">
                                    {{ reservation_hebergements|reduce((sum, r) => sum + r.prix, 0) }}
                                </span>€
                            </h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="text-end mb-5">
    <div class="d-flex justify-content-end gap-3">
        <a href="{{ path('app_hebergement_index') }}" class="btn btn-outline-primary rounded-pill px-4 py-2">
            <i class="bi bi-house-door me-2"></i>Retour aux hébergements
        </a>
        <div class="btn-group">
            <a href="{{ path('app_reservation_hebergement_index', app.request.query.all|merge({'sortName': (app.request.get('sortName') == 'asc') ? 'desc' : 'asc'})) }}" 
               class="btn btn-outline-secondary rounded-pill px-4 py-2">
                <i class="bi bi-sort-alpha-{{ app.request.get('sortName') == 'asc' ? 'down' : 'up' }} me-2"></i>Trier
            </a>
            <a href="{{ path('app_reservation_hebergement_export') }}" 
               class="btn btn-danger rounded-pill px-4 py-2" 
               title="Exporter en PDF">
                <i class="bi bi-file-pdf me-2"></i>PDF
            </a>
        </div>
        <a href="{{ path('app_reservation_hebergement_new') }}" class="btn btn-primary rounded-pill px-4 py-2">
            <i class="bi bi-plus-lg me-2"></i>Nouvelle réservation
        </a>
    </div>
</div>
    {% if reservation_hebergements is empty %}
        <div class="alert alert-info text-center rounded-pill">Aucune réservation trouvée</div>
    {% else %}
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            {% for reservation in reservation_hebergements %}
                <div class="col">
                    <div class="card h-100 border-0 shadow-lg-hover">
                        <div class="card-header bg-gradient-primary text-white rounded-top-3 py-4">
                            <h5 class="card-title mb-0 text-center">
                                {% if reservation.hebergement %}
                                    {{ reservation.hebergement.nom }}
                                {% else %}
                                    <span class="text-muted">Hébergement non spécifié</span>
                                {% endif %}
                            </h5>
                        </div>
                        
                        <div class="card-body position-relative">
                            <div class="position-absolute top-0 start-50 translate-middle mt-n3">
                                <span class="badge bg-white text-dark border border-2 border-primary shadow-sm px-3 py-2">
                                    {{ reservation.status == 'EnAttente' ? 'En attente' : 'Résolue' }}
                                </span>
                            </div>

                            <div class="mb-4 pt-4">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <div>
                                        <small class="text-muted">Début</small>
                                        <div class="fw-bold">{{ reservation.date|date('d/m/Y') }}</div>
                                    </div>
                                    <div class="text-end">
                                        <small class="text-muted">Fin</small>
                                        <div class="fw-bold">{{ reservation.dateFin|date('d/m/Y') }}</div>
                                    </div>
                                </div>

                                <div class="d-flex justify-content-between align-items-center mt-4">
                                    <div class="h3 text-success mb-0">
                                        {{ reservation.prix }}<small class="fs-6 text-muted">€ total</small>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card-footer bg-transparent border-top-0 d-flex justify-content-end gap-2 py-3">
                            <a href="{{ path('app_reservation_hebergement_show', {'idResH': reservation.idResH}) }}" 
                               class="btn btn-outline-primary rounded-pill px-3">
                                <i class="bi bi-eye me-2"></i>Détails
                            </a>
                            <a href="{{ path('app_reservation_hebergement_edit', {'idResH': reservation.idResH}) }}" 
                               class="btn btn-outline-secondary rounded-pill px-3">
                                <i class="bi bi-pencil-square me-2"></i>Modifier
                            </a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>

