{% extends 'base.html.twig' %}

{% block title %}Nouvelle réservation d'hébergement{% endblock %}

{% block body %}


<div class="container my-5">
    <div class="edit-card shadow-lg">
        <div class="card-header">
            <h1 class="h2 mb-0">
                <i class="bi bi-plus-circle me-2"></i>
                Nouvelle réservation
            </h1>
        </div>  

        <div class="card-body">
            {{ include('reservation_hebergement/_form.html.twig', {
                'button_label': 'Créer la réservation',
                'button_attr': {
                    'class': 'btn btn-primary btn-lg w-100 py-3'
                }
            }) }}
        </div>

        <div class="card-footer">
            <div class="action-buttons">
                <a href="{{ path('app_reservation_hebergement_index') }}" class="btn btn-outline-secondary btn-hover">
                    <i class="bi bi-arrow-left-circle me-2"></i>Retour à la liste
                </a>
            </div>
        </div>
    </div>
</div>
</div>
<style>
    .edit-card {
        max-width: 800px;
        margin: 2rem auto;
        border-radius: 1rem;
        overflow: hidden;
        background: #ffffff;
        border: none;
        transition: transform 0.3s ease;
    }

    .card-header {
        padding: 1.5rem 2rem;
        background: linear-gradient(135deg, #3b82f6 0%, #6366f1 100%);
        border-bottom: none;
    }

    .card-header h1 {
        color: white;
        font-weight: 700;
        letter-spacing: -0.5px;
    }

    .card-body {
        padding: 2rem;
    }

    .card-footer {
        padding: 1.5rem 2rem;
        border-top: 1px solid #f1f3f5;
    }

    .btn-hover {
        transition: all 0.2s ease;
        display: flex;
        align-items: center;
    }

    .btn-hover:hover {
        transform: translateY(-1px);
    }

    @media (max-width: 768px) {
        .container {
            padding: 0 1rem;
        }

        .edit-card {
            margin: 1rem 0;
            border-radius: 0.75rem;
        }

        .card-header {
            padding: 1.25rem;
        }

        .card-body {
            padding: 1.5rem;
        }

        .btn {
            width: 100%;
            justify-content: center;
        }
    }

    @media (min-width: 992px) {
        .edit-card:hover {
            transform: translateY(-5px);
        }
    }
</style>
{% endblock %}