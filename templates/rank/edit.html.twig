{% extends 'base.html.twig' %}

{% block title %}Modifier le Rang{% endblock %}

{% block body %}
<div class="rank-details-container">
    <div class="rank-card">
        <div class="rank-header">
            <h1 class="rank-title">Modifier le Rang</h1>
        </div>

        {{ form_start(form, {'attr': {'class': 'rank-form'}}) }}
            <div class="rank-content">
                <div class="rank-detail form-group">
                    <div class="detail-label">{{ form_label(form.NomRank, 'Nom du Rang') }}</div>
                    <div class="detail-value">
                        {{ form_widget(form.NomRank, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.NomRank) }}
                    </div>
                </div>

                <div class="rank-detail form-group">
                    <div class="detail-label">{{ form_label(form.points, 'Points Requis') }}</div>
                    <div class="detail-value">
                        {{ form_widget(form.points, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.points) }}
                    </div>
                </div>

                {{ form_rest(form) }}
            </div>

            <div class="rank-actions">
                <a href="{{ path('app_controller_rank_index') }}" class="btn btn-secondary">
                    <i class="icon-back">←</i> Annuler
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="icon-save">✓</i> Enregistrer
                </button>
            </div>
        {{ form_end(form) }}

        <div class="rank-delete-action">
            {{ include('rank/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        :root {
            --primary-color: #2c3e50;
            --secondary-color: #34495e;
            --background-color: #ecf0f1;
            --text-color: #333;
            --card-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
            --input-border-color: #bdc3c7;
        }

        body {
            background-color: var(--background-color);
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
            padding: 20px;
            box-sizing: border-box;
        }

        .rank-details-container {
            width: 100%;
            max-width: 500px;
        }

        .rank-card {
            background-color: white;
            border-radius: 15px;
            box-shadow: var(--card-shadow);
            padding: 30px;
            transition: transform 0.3s ease;
        }

        .rank-header {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-bottom: 25px;
            border-bottom: 2px solid var(--background-color);
            padding-bottom: 15px;
        }

        .rank-title {
            color: var(--primary-color);
            margin: 0;
            font-size: 1.8rem;
            font-weight: 700;
            text-align: center;
        }

        .rank-content {
            display: flex;
            flex-direction: column;
            gap: 20px;
        }

        .rank-detail {
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: 15px;
        }

        .detail-label {
            font-weight: 600;
            color: var(--secondary-color);
            flex: 0 0 40%;
        }

        .detail-value {
            flex: 1;
        }

        .form-control {
            width: 100%;
            padding: 12px;
            border: 1px solid var(--input-border-color);
            border-radius: 8px;
            font-size: 16px;
            transition: all 0.3s ease;
        }

        .form-control:focus {
            outline: none;
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(44, 62, 80, 0.1);
        }

        .form-group {
            display: flex;
            flex-direction: column;
            background-color: var(--background-color);
            padding: 15px;
            border-radius: 10px;
        }

        .form-group label {
            margin-bottom: 8px;
            font-size: 14px;
        }

        .rank-actions {
            display: flex;
            justify-content: space-between;
            margin-top: 25px;
            gap: 15px;
        }

        .btn {
            flex-grow: 1;
            text-align: center;
            padding: 12px 20px;
            text-decoration: none;
            border-radius: 8px;
            font-weight: 600;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            border: none;
        }

        .btn-primary {
            background-color: var(--primary-color);
            color: white;
        }

        .btn-secondary {
            background-color: var(--background-color);
            color: var(--secondary-color);
        }

        .btn:hover {
            opacity: 0.9;
            transform: scale(1.02);
        }

        .rank-delete-action {
            margin-top: 20px;
            text-align: center;
        }

        .icon-back, .icon-save {
            font-style: normal;
        }

        /* Error Styling */
        .form-error {
            color: #e74c3c;
            font-size: 0.9rem;
            margin-top: 5px;
        }
    </style>
{% endblock %}