{% block stylesheets %}
	<style>
		/* Scoped to reservation cards only */
		.reservation-container {
			margin-left: 270px;
			padding: 20px;
		}

		.reservation-container .reservation-grid {
			display: flex;
			flex-wrap: wrap;
			gap: 20px;
		}

		.reservation-container .reservation-card {
			flex: 0 0 calc(50% - 20px);
			border-radius: 16px;
			box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
			transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
			border: none;
			overflow: hidden;
			background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
			margin-bottom: 0;
		}

		.reservation-container .reservation-card:hover {
			transform: translateY(-8px);
			box-shadow: 0 15px 35px rgba(0, 0, 0, 0.12);
		}

		/* Modified card header - removed background colors */
		.reservation-container .reservation-card .card-header {
			display: flex;
			justify-content: space-between;
			align-items: center;
			padding: 1.25rem 1.5rem;
			border-bottom: 1px solid #eaeaea;
			position: relative;
			overflow: hidden;
			background: white; /* White background instead of colored */
		}

		.reservation-container .reservation-card .card-header::before {
			content: '';
			position: absolute;
			top: 0;
			left: 0;
			width: 4px;
			height: 100%;
			background: #03045f; /* Subtle accent color for all cards */
		}

		.reservation-container .reservation-card .card-title {
			font-weight: 600;
			margin: 0;
			font-size: 1.1rem;
			letter-spacing: 0.5px;
			white-space: nowrap;
			overflow: hidden;
			text-overflow: ellipsis;
			color: #2c3e50; /* Dark text color */
		}

		/* Status badge styles - kept distinctive colors */
		.reservation-container .badge-status {
			font-size: 0.75rem;
			padding: 5px 12px;
			border-radius: 50px;
			font-weight: 600;
			letter-spacing: 0.5px;
		}

		/* Badge color for waiting status */
		.reservation-container .badge-status-waiting {
			background-color: #f59e0b;
			color: white;
		}

		/* Badge color for resolved status */
		.reservation-container .badge-status-resolved {
			background-color: #10b981;
			color: white;
		}

		.reservation-container .reservation-card .card-body {
			padding: 1.5rem;
		}

		.reservation-container .reservation-dates {
			display: flex;
			justify-content: space-between;
			margin-bottom: 15px;
			background: rgba(75, 108, 183, 0.05);
			padding: 12px;
			border-radius: 10px;
		}

		.reservation-container .date-section {
			text-align: center;
			flex: 1;
			position: relative;
		}

		.reservation-container .date-section:not(:last-child)::after {
			content: '';
			position: absolute;
			right: 0;
			top: 50%;
			transform: translateY(-50%);
			width: 1px;
			height: 60%;
			background: rgba(0, 0, 0, 0.1);
		}

		.reservation-container .date-section small {
			color: #6c757d;
			font-size: 0.7rem;
			text-transform: uppercase;
			letter-spacing: 1px;
			display: block;
			margin-bottom: 5px;
		}

		.reservation-container .date-section p {
			margin: 0;
			font-weight: 700;
			color: #2c3e50;
			font-size: 1rem;
		}

		.reservation-container .reservation-price {
			text-align: right;
			font-size: 1.3rem;
			font-weight: 700;
			margin: 15px 0;
			color: #182848;
			position: relative;
			display: inline-block;
			float: right;
		}

		.reservation-container .reservation-price::before {
			content: '';
			position: absolute;
			bottom: -5px;
			right: 0;
			width: 50%;
			height: 3px;
			background: linear-gradient(90deg, #4b6cb7 0%, #182848 100%);
			border-radius: 3px;
		}

		.reservation-container .reservation-user,
		.reservation-container .reservation-flight {
			margin-bottom: 12px;
			padding-bottom: 12px;
			border-bottom: 1px dashed rgba(0, 0, 0, 0.1);
		}

		.reservation-container .reservation-user small,
		.reservation-container .reservation-flight small {
			color: #6c757d;
			font-size: 0.75rem;
			text-transform: uppercase;
			letter-spacing: 1px;
			display: block;
			margin-bottom: 3px;
		}

		.reservation-container .reservation-user p,
		.reservation-container .reservation-flight p {
			margin: 0;
			font-weight: 500;
			color: #2c3e50;
			font-size: 0.9rem;
		}

		.reservation-container .reservation-actions {
			display: flex;
			justify-content: space-between;
			margin-top: 20px;
			gap: 10px;
		}

		.reservation-container .action-btn {
			flex: 1;
			padding: 8px;
			border-radius: 6px;
			border: none;
			font-weight: 600;
			cursor: pointer;
			transition: all 0.3s;
			display: flex;
			align-items: center;
			justify-content: center;
			font-size: 0.8rem;
		}

		.reservation-container .action-btn.details {
			background: rgba(75, 108, 183, 0.1);
			color: #03045f;
		}

		.reservation-container .action-btn.details:hover {
			background: rgba(75, 108, 183, 0.2);
		}

		.reservation-container .action-btn.modify {
			background: rgba(40, 167, 69, 0.1);
			color: #28a745;
		}

		.reservation-container .action-btn.modify:hover {
			background: rgba(40, 167, 69, 0.2);
		}

		.reservation-container .action-btn i {
			margin-right: 6px;
			font-size: 0.9rem;
		}
		/* Modern Sidebar Styling */
		.sidebar {
			width: 270px;
			height: 100%;
			background: #13117D;
			color: white;
			position: fixed;
			left: 0;
			top: 0;
			overflow-y: auto;
			box-shadow: 4px 0 15px rgba(0, 0, 0, 0.1);
			transition: all 0.3s ease;
			padding-top: 20px;
			z-index: 1000;
			scrollbar-width: none;
			-ms-overflow-style: none;
		}

		.sidebar::-webkit-scrollbar {
			width: 0;
			height: 0;
		}

		/* Logo Section */
		.sidebar .logo {
			padding: 0 20px 20px;
			display: flex;
			justify-content: center;
			border-bottom: 1px solid rgba(255, 255, 255, 0.1);
			margin-bottom: 20px;
		}

		/* Logo */
		.sidebar .logo img {
			display: block;
			width: 190px;
			margin: 0 auto 5px;
		}

		.sidebar .logo img:hover {
			transform: scale(1.05);
		}

		/* Navigation Menu */
		.sidebar .nav {
			list-style: none;
			padding: 0;
			width: 100%;
			margin-top: 5px;
			max-height: calc(95% - 200px);
			overflow-y: auto;
			scrollbar-width: none; /* Firefox */
			-ms-overflow-style: none; /* Internet Explorer 10+ */
		}

		.sidebar .nav::-webkit-scrollbar {
			width: 0;
			height: 0;
		}

		.sidebar .nav li {
			width: 80%;
			padding: 11px; /* Ajustement du padding pour un meilleur look */
			margin: 4% auto;
			text-align: left;
			background-color: #03045f;
			border-radius: 15px;
			font-size: 16px;
			font-weight: bold;
			cursor: pointer;
			transition: 0.3s ease-in-out;
			box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
		}

		.sidebar .nav li a {
			display: flex;
			align-items: center;
			padding: 14px 1px;
			color: rgba(255, 255, 255, 0.85);
			text-decoration: none;
			font-weight: 800;
			font-size: 0.97rem;
			transition: all 0.3s ease;
			border-radius: 12px;
			position: relative;
		}

		.sidebar .nav li a i {
			font-size: 18px;
			margin-right: 12px;
			min-width: 25px;
			text-align: center;
			transition: all 0.3s ease;
		}

		.sidebar .nav li a::before {
			content: '';
			position: absolute;
			left: 0;
			top: 0;
			height: 100%;
			width: 4px;
			background: white;
			border-radius: 0 4px 4px 0;
			opacity: 0;
			transition: all 0.3s ease;
		}

		.sidebar .nav li:hover a {
			background: rgba(255, 255, 255, 0.08);
			color: white;
			transform: translateX(5px);
		}

		.sidebar .nav li:hover a::before {
			opacity: 1;
		}

		.sidebar .nav li:hover a i {
			color: #4e8cff;
			transform: translateX(2px);
		}

		.sidebar .nav li.active a {
			background: rgba(255, 255, 255, 0.15);
			color: white;
		}

		.sidebar .nav li.active a::before {
			opacity: 1;
		}

		.sidebar .nav li.active a i {
			color: #4e8cff;
		}

		/* Logout Button */
		.logout-btn {
			position: absolute;
			bottom: 20px;
			left: 50%;
			transform: translateX(-50%);
			padding: 12px 15px;
			width: 170px;
			background: rgba(255, 255, 255, 0.1);
			color: white;
			font-weight: 500;
			font-size: 0.9rem;
			text-decoration: none;
			border-radius: 50px;
			border: 1px solid rgba(255, 255, 255, 0.15);
			text-align: center;
			transition: all 0.3s ease;
			display: flex;
			align-items: center;
			justify-content: center;
			box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
		}

		.logout-btn::before {
			content: '\f2f5';
			font-family: 'Font Awesome 5 Free';
			font-weight: 900;
			margin-right: 8px;
			font-size: 16px;
		}

		.logout-btn:hover {
			background: #ff3547;
			color: white;
			transform: translateY(-3px) translateX(-50%);
			box-shadow: 0 6px 20px rgba(255, 53, 71, 0.3);
		}

		/* Adjust the content container to match the new sidebar width */
		.reservation-container,
		.dashboard-content {
			margin-left: 270px;
		}

		/* Responsive adjustments for smaller screens if needed */
		@media(max-width: 992px) {
			.sidebar {
				width: 70px;
				padding-top: 15px;
			}

			.sidebar .logo img {
				width: 40px;
			}

			.sidebar .nav li a span {
				display: none;
			}

			.sidebar .nav li a i {
				margin-right: 0;
				font-size: 20px;
			}

			.sidebar .nav li a {
				justify-content: center;
				padding: 12px;
			}

			.logout-btn {
				width: 50px;
				height: 50px;
				border-radius: 50%;
				padding: 0;
			}

			.logout-btn::before {
				margin-right: 0;
			}

			.logout-btn span {
				display: none;
			}

			.reservation-container,
			.dashboard-content {
				margin-left: 70px;
			}
		}
	</style>
{% endblock %}

{% block body %}
<div class="sidebar">
	<div class="logo">
		<img src="{{ asset('images/LogoDashboard.jpg') }}" alt="Logo B2B Travel">
	</div>
	<ul class="nav">
		<li>
			<a href="{{ path('Dashboard') }}">
				<i class="fas fa-home"></i>
			</i>Dashboard
		</li>
	</a>
</li>
<li>
	<a href="{{ path('Liste_reservations') }}">
		<i class="fas fa-ticket-alt"></i>Réservation Voyage</a>
</li>
<li>
	<a href="{{ path('app_reservation_hebergement_index') }}">
		<i class="fas fa-ticket-alt"></i>
		Réservation Hébergement</a>
</li></ul></div>
<div class="reservation-container"><h1 style="font-weight: 700; color: #2c3e50; margin-bottom: 25px;">Liste Reservations Voyage</h1><div class="reservation-grid">
{% for reservation in reservations %}
	{% set statusClass = 'status-waiting' %}
	{% set badgeClass = 'badge-status-waiting' %}
	{% set statusText = 'EN ATTENTE D\'HEBERGEMENT' %}
				
				{# Check if reservation has hebergements #}
				{% if reservation.reservationHebergements is not empty %}
					{% for hebergement in reservation.reservationHebergements %}
						{% if loop.first %}
							{% if hebergement.status == 'Resolue' %}
								{% set statusClass = 'status-resolved' %}
								{% set badgeClass = 'badge-status-resolved' %}
								{% set statusText = 'HEBERGEMENT RESOLUE' %}
							{% elseif hebergement.status == 'EnAttente' %}
								{% set statusClass = 'status-waiting' %}
								{% set badgeClass = 'badge-status-waiting' %}
								{% set statusText = 'EN ATTENTE D\'HEBERGEMENT' %}
{% endif %}{% endif %}{% endfor %}{% endif %}<div class="reservation-card {{ statusClass }}"><div class="card-header"><h5 class="card-title"></h5><span class="badge-status {{ badgeClass }}">{{ statusText }}</span></div><div class="card-body"><div class="reservation-dates">
<div class="date-section">
	<small>Début</small>
	<p>{{ reservation.id_vol.dateDepart|date('d/m/Y') }}</p>
</div>
<div class="date-section">
	<small>Fin</small>
	<p>{{ reservation.id_vol.dateArrival|date('d/m/Y') }}</p>
</div></div><div class="reservation-price">
{{ reservation.prixTotal }}
DT</div><div class="reservation-user">
<small>Client</small>
<p>{{ reservation.id_user.nom }}
	{{ reservation.id_user.prenom }}</p></div><div class="reservation-flight">
<small>Vol</small>
<p>{{ reservation.id_vol.airLine }}
	(VOL ID :{{ reservation.id_vol.flightNumber }})</p>
<p>Durée:
	{{ reservation.id_vol.dureeVol }}</p></div><div class="reservation-actions">
<a href="{{ path('reservation_details', {'id': reservation.id_resV}) }}" class="action-btn details" style="text-decoration: none;">
	<i class="fas fa-info-circle"></i>
	Détails
</a>

<a href="{{ path('reservation_qrcode_admin', {'id': reservation.id_resV}) }}"  class="action-btn details" style="text-decoration: none;">
	<i class="bi bi-qr-code"></i>
	View QR Code
</a></div></div></div>{% else %}<div style="width: 100%;"><div class="alert alert-info">No reservations found.</div></div>{% endfor %}</div></div>{% endblock %}
