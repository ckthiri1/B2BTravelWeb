    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const seatInputs = document.querySelectorAll('.seat-input');
            const totalPriceEl = document.querySelector('.total-price');
            const seatDataInput = document.getElementById('seat-data');
            const deleteButtons = document.querySelectorAll('.btn-delete');
            
            function updatePrice() {
                let total = 0;
                const data = {};
                
                document.querySelectorAll('.flight-card').forEach(card => {
                    const input = card.querySelector('.seat-input');
                    const price = parseFloat(card.dataset.price);
                    const seats = parseInt(input.value || 1);
                    const id = input.dataset.id;
                    
                    total += price * seats;
                    data[id] = seats;
                });
                
                totalPriceEl.textContent = total.toFixed(2) + ' DT';
                seatDataInput.value = JSON.stringify(data);
            }
            
            seatInputs.forEach(input => input.addEventListener('input', updatePrice));
            
            deleteButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const card = this.closest('.flight-card');
                    card.style.opacity = '0';
                    setTimeout(() => {
                        card.remove();
                        updatePrice();
                    }, 300);
                });
            });
            
            updatePrice();
        });
    </script>
